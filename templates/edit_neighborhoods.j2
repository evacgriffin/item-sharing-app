{# Edit Neighborhoods Page #}

{% extends "edit_base.html" %}

{% block content %}
    <h1>Edit Neighborhoods</h1>
    <table>
        <caption>Editing Neighborhood:</caption>
        <tr>
            {% for key in neighborhood[0].keys() %}
            <th>{{key}}</th>
            {% endfor %}
        </tr>
        {% for item in neighborhood %}
        <tr>
            {% for key in item.keys() %}
            <td>{{item[key]}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>

    <div id="form">
        <form id="editNeighborhood" action="/edit_neighborhoods/{{neighborhood[0]['Neighborhood ID']}}" method="post">
            <legend><strong>Edit Neighborhood</strong></legend>

            <fieldset>
                <input type="hidden" value="{{neighborhood[0].neighborhoodID}}" id="neighborhoodID" name="neighborhoodID" required>

                <label>Neighborhood Name:</label>
                <input type="text" id="neighborhood_name" name="neighborhood_name">
            </fieldset>

            <input class="btn" type="submit" name="edit_neighborhood" value="Submit">
            <a href='/neighborhoods'><input class="btn" type="button" value="Cancel"></a>
        </form>
    </div>
{% endblock %}