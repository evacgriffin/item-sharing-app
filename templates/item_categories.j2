{# Item Categories Page #}

{% extends "base.html" %}

{% block content %}
    <h1>Item Categories</h1>
    <table>
        <caption>Item Category Data</caption>
        <tr>
            <th>
            </th>
            <th></th>
            {% for key in item_categories[0].keys()%}
            <th>{{key}}</th>
            {% endfor %}
        </tr>
        {% for item_category in item_categories %}
        <tr>
            <td>
                <a href="/edit_item_categories/{{item_category['Category ID']}}">Edit</a>
            </td>
            <td>
                <a href="/delete_item_categories/{{item_category['Category ID']}}">Delete</a>
            </td>
            {% for key in item_category.keys() %}
            <td>{{item_category[key]}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>

    <div id="form">
        <h2>Add New Item Category</h2>
        <form method="post">
            <label>Category Name:</label>
            <input type="text" id="category_name" name="category_name"><br><br>
            <input type="submit" value="Submit" name="add_item_category">
            <button type="button">Cancel</button>
        </form>
    </div>
{% endblock %}