{# Item Categories Page #}

{% extends "base.html" %}

{% block content %}
    <h1>Item Categories</h1>
    <table>
        <caption>Item Category Data</caption>
        <tr>
            <th>
                <button type="button">New</button>
            </th>
            <th></th>
            <th>categoryID</th>
            <th>categoryName</th>
        </tr>
        {% for item in item_categories %}
        <tr>
            <td>
                <button type="button">Edit</button>
            </td>
            <td>
                <button type="button">Delete</button>
            </td>
            <td>{{item['categoryID']}}</td>
            <td>{{item['categoryName']}}</td>
        </tr>
        {% endfor %}
    </table>

    <div id="form">
        <h2>Add New Item Category</h2>
        <form>
            <label>Category Name:</label>
            <input type="text"><br><br>
            <input type="submit" value="Submit">
            <button type="button">Cancel</button>
        </form>
    </div>

    <div id="form">
        <h2>Edit Item Category</h2>
        <form>
            <p>categoryID: 1</p>
            <label>Category Name:</label>
            <input type="option" placeholder="lighting"><br><br>
            <input type="submit" value="Submit">
            <button type="button">Cancel</button>
        </form>
    </div>

    <div id="form">
        <h2>Delete Item Category</h2>
        <form>
            <p>Are you sure you wish to delete the following item category?</p>
            <p>categoryID: 1</p>
            <p>Category Name: lighting</p>
            <input type="submit" value="Delete Transfer">
            <button type="button">Cancel</button>
        </form>
    </div>
{% endblock %}