{# Transfer Items Page #}

{% extends "base.html" %}

{% block content %}
    <h1>Transfer Items</h1>
    <table>
        <caption>Transfer Item Data</caption>
        <tr>
            <th>
                <button type="button">New</button>
            </th>
            <th></th>
            <th>Transfer Item ID</th>
            <th>Item ID</th>
            <th>Transfer ID</th>
            <th>Quantity</th>
            <th>Milliliters</th>
            <th>Pounds</th>
        </tr>
        {% for item in transfer_items %}
        <tr>
            <td>
                <button type="button">Edit</button>
            </td>
            <td>
                <button type="button">Delete</button>
            </td>
            <td>{{item['transferItemID']}}</td>
            <td>{{item['itemID']}}</td>
            <td>{{item['transferID']}}</td>
            <td>{{item['quantity']}}</td>
            <td>{{item['milliliters']}}</td>
            <td>{{item['pounds']}}</td>
        </tr>
        {% endfor %}
    </table>

    <div id="form">
        <h2>Add New Transfer Item</h2>
        <form>
            <label>Item Name:</label>
            <input type="text"><br><br>
            <label>Transfer ID:</label>
            <input type="option"><br><br>
            <label>Quantity:</label>
            <input type="option"><br><br>
            <label>Milliliters:</label>
            <input type="option"><br><br>
            <label>Pounds:</label>
            <input type="option"><br><br>
            <input type="submit" value="Submit">
            <button type="button">Cancel</button>
        </form>
    </div>

    <div id="form">
        <h2>Edit Transfer Item</h2>
        <form>
            <p>Transfer Item ID: 1</p>
            <label>Item Name:</label>
            <input type="text" placeholder="AA battery">
            <p>Transfer ID: 1</p>
            <label>Quantity:</label>
            <input type="option" placeholder="20"><br><br>
            <label>Milliliters:</label>
            <input type="option" placeholder="None"><br><br>
            <label>Pounds:</label>
            <input type="option" placeholder="None"><br><br>
            <input type="submit" value="Submit">
            <button type="button">Cancel</button>
        </form>
    </div>

    <div id="form">
        <h2>Delete Transfer Item</h2>
        <form>
            <p>Are you sure you wish to delete the following transferItems?</p>
            <p>Transfer Item ID: 1</p>
            <p>Transfer ID: 1</p>
            <p>Item Name: AA Battery</p>
            <input type="submit" value="Delete Transfer">
            <button type="button">Cancel</button>
        </form>
    </div>
{% endblock %}