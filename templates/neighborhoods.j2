{# Neighborhoods Page #}

{% extends "base.html" %}

{% block content %}
<h1>Neighborhoods</h1>
    <table>
        <caption>Neighborhood Data</caption>
        <tr>
            <th>
                <button type="button">New</button>
            </th>
            <th></th>
            {% for key in neighborhoods[0].keys()%}
            <th>{{key}}</th>
            {% endfor %}
        </tr>
        {% for neighborhood in neighborhoods %}
        <tr>
            <td>
                <button type="button">Edit</button>
            </td>
            <td>
                <button type="button">Delete</button>
            </td>
            {% for key in neighborhood.keys() %}
            <td>{{neighborhood[key]}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>

    <div id="form">
        <h2>Add New Neighborhood</h2>
        <form>
            <label>Neighborhood Name:</label>
            <input type="text"><br><br>
            <input type="submit" value="Submit">
            <button type="button">Cancel</button>
        </form>
    </div>

    <div id="form">
        <h2>Edit Neighborhood</h2>
        <form>
            <p>Neighborhood ID: 1</p>
            <label>Neighborhood Name:</label>
            <input type="option" placeholder="Belltown"><br><br>
            <input type="submit" value="Submit">
            <button type="button">Cancel</button>
        </form>
    </div>

    <div id="form">
        <h2>Delete Neighborhood</h2>
        <form>
            <p>Are you sure you wish to delete the following item neighborhood?</p>
            <p>Neighborhood ID: 1</p>
            <p>Neighborhood Name: Belltown</p>
            <input type="submit" value="Delete Neighborhood">
            <button type="button">Cancel</button>
        </form>
    </div>
{% endblock %}