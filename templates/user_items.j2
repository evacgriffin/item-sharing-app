{# User Items Page #}

{% extends "base.html" %}

{% block content %}
    <h1>User Items</h1>
    <table>
        <caption>User Item Data</caption>
        <tr>
            <th>
                <button type="button">New</button>
            </th>
            <th></th>
            <th>User ID</th>
            <th>Item ID</th>
        </tr>
        {% for item in user_items %}
        <tr>
            <td>
                <button type="button">Edit</button>
            </td>
            <td>
                <button type="button">Delete</button>
            </td>
            <td>{{item['userID']}}</td>
            <td>{{item['itemID']}}</td>
        </tr>
        {% endfor %}
    </table>

    <div id="form">
        <h2>Add New User Item</h2>
        <form>
            <label>Username:</label>
            <input type="option"><br><br>
            <label>Item Name:</label>
            <input type="option"><br><br>
            <input type="submit" value="Submit">
            <button type="button">Cancel</button>
        </form>
    </div>

    <div id="form">
        <h2>Edit User Item</h2>
        <form>
            <p>User ID: 1</p>
            <label>Username:</label>
            <input type="option" placeholder="katie775"><br><br>
            <label>Item Name:</label>
            <input type="option" placeholder="beanie"><br><br>
            <input type="submit" value="Submit">
            <button type="button">Cancel</button>
        </form>
    </div>

    <div id="form">
        <h2>Delete User Item</h2>
        <form>
            <p>Are you sure you wish to delete the following user item?</p>
            <p>User ID: 1</p>
            <p>User Name: katie775</p>
            <p>Item ID: 5</p>
            <p>Item Name: beanie</p>
            <input type="submit" value="Delete User">
            <button type="button">Cancel</button>
        </form>
    </div>
{% endblock %}