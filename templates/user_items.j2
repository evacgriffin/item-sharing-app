            </td>
            <td>
                <a href="/delete_user_items/{{ids[loop.index0]['userID']}}-{{ids[loop.index0]['itemID']}}">Delete</a>
            </td>
            {% for key in user_item.keys() %}
            <td>{{user_item[key]}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>

    <div id="form">
        <h2>Add New User Item</h2>
        <form method="post">
            <label>Username:</label>
            <select id="user_name" name="user_name"><br><br>
                {% for user in users %}
                    <option value="{{user['userName']}}">{{user['userName']}}</option>
                {% endfor %}
            </select>
            <label>Item Name:</label>
            <select id="item_name" name="item_name"><br><br>
                {% for item in items %}
                    <option value="{{item['itemName']}}">{{item['itemName']}}</option>
                {% endfor %}
            </select>
            <input type="submit" value="Submit" name="add_user_item">
            <button type="button">Cancel</button>
        </form>
    </div>
{% endblock %}