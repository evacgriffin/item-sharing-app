{# User Items Page #}

{% extends "base.html" %}

{% block content %}
    <h1>User Items</h1>
    <table>
        <caption>User Item Data</caption>
        <tr>
            <th>
            </th>
            <th></th>
            {% for key in user_items[0].keys()%}
            <th>{{key}}</th>
            {% endfor %}
        </tr>
        {% for user_item in user_items %}
        <tr>
            <td>
