{# Edit Item Categories Page #}

{% extends "edit_base.html" %}

{% block content %}
    <h1>Edit Item Categories</h1>
    <table>
        <caption>Editing Item Category:</caption>
        <tr>
            {% for key in item_category[0].keys() %}
            <th>{{key}}</th>
            {% endfor %}
        </tr>
        {% for item in item_category %}
        <tr>
            {% for key in item.keys() %}
            <td>{{item[key]}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>

    <div id="form">
        <form id="editItemCategory" action="/edit_item_categories/{{item_category[0]['Category ID']}}" method="post">
            <legend><strong>Edit Item Category</strong></legend>

            <fieldset>
                <input type="hidden" value="{{item_category[0].categoryID}}" id="categoryID" name="categoryID" required>

                <label>Category Name:</label>
                <input type="text" id="category_name" name="category_name">
            </fieldset>

            <input class="btn" type="submit" name="edit_item_category" value="Submit">
            <a href='/item_categories'><input class="btn" type="button" value="Cancel"></a>
        </form>
    </div>
{% endblock %}