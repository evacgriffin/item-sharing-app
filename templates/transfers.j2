{# Transfers Page #}

{% extends "base.html" %}

{% block content %}
    <h1>Transfers</h1>
    <table>
        <tr>
            <th>
                <button type="button">New</button>
            </th>
            <th></th>
            <th>transferID</th>
            <th>transferDateTime</th>
            <th>lendingUserID</th>
            <th>borrowingUserID</th>
        </tr>
        {% for item in transfers %}
        <tr>
            <td>
                <button type="button">Edit</button>
            </td>
            <td>
                <button type="button">Delete</button>
            </td>
            <td>{{item['transferID']}}</td>
            <td>{{item['transferDateTime']}}</td>
            <td>{{item['lendingUserID']}}</td>
            <td>{{item['borrowingUserID']}}</td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}