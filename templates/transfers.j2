{# Transfers Page #}

{% extends "base.html" %}

{% block content %}
    <h1>Transfers</h1>
    <table>
        <tr>
            <th>
                <button type="button">New</button>
            </th>
            <th></th>
            <th>transferID</th>
            <th>transferDateTime</th>
            <th>lendingUserID</th>
            <th>borrowingUserID</th>
        </tr>
        {% for item in transfers %}
        <tr>
            <td>
                <button type="button">Edit</button>
            </td>
            <td>
                <button type="button">Delete</button>
            </td>
            <td>{{item['transferID']}}</td>
            <td>{{item['transferDateTime']}}</td>
            <td>{{item['lendingUserID']}}</td>
            <td>{{item['borrowingUserID']}}</td>
        </tr>
        {% endfor %}
    </table>

    <div id="form">
        <h2>Add New Transfer</h2>
        <form>
            <label>Date and Time of Transfer:</label>
            <input type="datetime-local"><br><br>
            <label>Lending Username:</label>
            <input type="option"><br><br>
            <label>Borrowing Username:</label>
            <input type="option"><br><br>
            <input type="submit" value="Submit">
            <button type="button">Cancel</button>
        </form>
    </div>

    <div id="form">
        <h2>Edit Transfer</h2>
        <form>
            <p>transferID: 1</p>
            <label>Date and Time of Transfer:</label>
            <input type="text" placeholder="2025-02-04 11:00"><br><br>
            <label>Lending Username:</label>
            <input type="option" placeholder="ben.smith89"><br><br>
            <label>Borrowing Username:</label>
            <input type="option" placeholder="katie775"><br><br>
            <input type="submit" value="Submit">
            <button type="button">Cancel</button>
        </form>
    </div>

    <div id="form">
        <h2>Delete Transfer</h2>
        <form>
            <p>Are you sure you wish to delete the following transfer?</p>
            <p>transferID: 1</p>
            <p>Lending Username: ben.smith89</p>
            <p>Borrowing Username: katie775</p>
            <input type="submit" value="Delete Transfer">
            <button type="button">Cancel</button>
        </form>
    </div>
{% endblock %}